<!DOCTYPE html>
<html>
<head>
  <title>BnB</title>
  <link rel="stylesheet" type="text/css" href="css/stylesheet.css"></link>
</head>
<body>
  <section>
    <header>
    <div class="container">
      <h1 class="logo"></h1>
      <nav>
        <ul>
          <form id="tabs">
            <li><a href="#home" data-id="1" id="home">Home</a></li>
            <li><a href="#list" data-id="2" id="list">list of spaces</a></li>
            <li><a href="#make" data-id="3" id="make">Make a listing</a></li>
            <li><a href="#signing_in"id="signing_in" >Sign in</a></li>
            <li><a href="#signing_up"id="signing_up" >Sign up</a></li>
          </form>
        </ul>
      </nav>
    </div>
    </header>
  </section>
  <script src="https://code.jquery.com/jquery-2.1.4.min.js"></script>
<script>
$(document).ready(function(){
  $("#home").click(function(){
    $('#info').text("Welcome to MakersBnB!");
  });
  $("#list").click(function() {
    $.get("http://localhost:9292/", function(data){
    $("#info").load("http://localhost:9292/");
    })
  });
  $("#make").click(function() {
    $("#info").load("make_listing");
  });
  $("#signing_up").click(function() {
    $("#info").load("sign_up");
  });
  $("#signing_in").click(function() {
    $("#info").load("sign_in");
  });
});
</script>
<h2>
  <%= flash[:notice] %>
</h2>
<% if @user %>
  <h1>Welcome, <%= @user %></h1>
  <form action="/sign_out" method="post">
    <input type="submit" value="Sign out" />
  </form>
<% end %>
<p class="p" id="info"> </p>
</body>
</html>
